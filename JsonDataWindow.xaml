<Window x:Class="Mind2Quest_WPF.JsonDataWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Closed="Window_Closed"
        Title="Json Data" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
            <!--<RowDefinition Height="1*"/>-->
        </Grid.RowDefinitions>

        <TextBlock x:Name="titleLabel" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="frontload" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <TextBlock x:Name="requestLabel" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <TextBlock x:Name="descriptionLabel" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5"/>
        <!--<TextBlock x:Name="rewardLabel" Grid.Row="3" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center"/>-->
    </Grid>
</Window>
